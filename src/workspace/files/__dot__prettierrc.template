{
  "tabWidth": 2,
  "printWidth": 120,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 420,
        "parser": "json",
        "singleQuote": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "semi": false
      }
    },
    {
      "files": ["*.component.html", "*.container.html"],
      "options": {
        "parser": "angular",
        "semi": false
      }
    }
  ]
}
