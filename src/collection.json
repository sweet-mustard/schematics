{
  "extends": ["@schematics/angular"],
  "schematics": {
    "application": {
      "aliases": ["app"],
      "factory": "./application",
      "schema": "./application/schema.json",
      "description": "Create an Angular application."
    },
    "component": {
      "aliases": ["swcomp"],
      "description": "Creates a component",
      "factory": "./component",
      "schema": "./component/schema.json"
    },
    "container": {
      "aliases": ["swc"],
      "description": "Creates a container",
      "factory": "./container",
      "schema": "./container/schema.json"
    },
    "jest": {
      "factory": "./jest",
      "schema": "./jest/schema.json",
      "description": "Creates files so jest can properly work",
      "hidden": true
    },
    "module": {
      "aliases": ["swm"],
      "description": "Creates a module",
      "factory": "./module",
      "schema": "./module/schema.json"
    },
    "ng-new": {
      "factory": "./ng-new",
      "schema": "./ng-new/schema.json",
      "description": "Create an Angular workspace.",
      "hidden": true
    },
    "sandbox": {
      "aliases": ["sws"],
      "description": "Creates a sandbox",
      "factory": "./sandbox",
      "schema": "./sandbox/schema.json"
    },
    "workspace": {
      "factory": "./workspace",
      "schema": "./workspace/schema.json",
      "description": "Create an Angular workspace.",
      "hidden": true
    }
  }
}
