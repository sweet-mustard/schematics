{
  "name": "@sweet-mustard/schematics",
  "version": "1.0.0",
  "description": "> Angular Schematics with a Sweet Mustard flavour.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --watch",
    "test-ci": "jest --coverage --bail",
    "pack": "yarn run test-ci && bazel run src:npm_package.pack",
    "publish": "yarn run test-ci && bazel run src:npm_package.publish"
  },
  "devDependencies": {
    "@bazel/bazel": "^0.19.1",
    "@bazel/typescript": "0.20.3",
    "@schematics/angular": "^7.1.2",
    "jest": "^24.8.0",
    "ts-jest": "^23.10.5",
    "typescript": "~3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sweet-mustard/schematics.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/sweet-mustard/schematics",
  "dependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.12"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|js)?(x)",
      "**/?(*.)+(spec|test).(ts|js)?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/.*(files)"
    ]
  }
}
